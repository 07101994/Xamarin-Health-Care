            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource"
                            Android="add_patient_dark.png"
                            WinPhone="Images/add_patient_dark.png"
                            iOS="add_patient.png" />
            </ToolbarItem.Icon>
